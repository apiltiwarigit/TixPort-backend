# TixPort Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# Ticket Evolution API Configuration
# Get FREE sandbox credentials from: https://ticketevolution.com/developers
# No approval needed for sandbox testing!

# Option 1: Sandbox API (RECOMMENDED for development)
TICKET_EVOLUTION_API_TOKEN=your_sandbox_token_here
TICKET_EVOLUTION_API_SECRET=your_sandbox_secret_here
TICKET_EVOLUTION_API_URL=https://api.sandbox.ticketevolution.com/v9
TICKET_EVOLUTION_ENV=sandbox

# Option 2: Production API (Requires approval)
# TICKET_EVOLUTION_API_TOKEN=your_production_token_here
# TICKET_EVOLUTION_API_SECRET=your_production_secret_here
# TICKET_EVOLUTION_API_URL=https://api.ticketevolution.com/v9
# TICKET_EVOLUTION_ENV=production

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
