# TixPort Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# Ticket Evolution API Configuration (REQUIRED)
# Get your API token from: https://ticketevolution.com/developers
TICKET_EVOLUTION_API_TOKEN=your_api_token_here
TICKET_EVOLUTION_API_URL=https://api.ticketevolution.com/v9

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
